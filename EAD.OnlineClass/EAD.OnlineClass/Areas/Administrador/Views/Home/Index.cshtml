@model EAD.Onlineclass.Dominio.Administradores
@{
    ViewBag.Title = "Index";
    Layout = "";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")<link href="~/Content/css/bootstrap-responsive.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>


    <div class="container" style="margin-top: 140px">
        <div class="row">
            <div class="span4"></div>
            <div class="span4 hero-unit">
                <p>Login</p>
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true)
                    if (ViewBag.Mensagem != null)
                    {
                    <p>@ViewBag.Mensagem</p>
                    }
                    <div>
                        <div>
                            <input class="input-validation-error text-box single-line" data-val="true"
                                data-val-required="Campo Obrigatório" id="Login" name="Login" value=""
                                type="text" placeholder="Login">
                        </div>
                        <div style="width: 100%">
                            @Html.ValidationMessageFor(model => model.Login)
                        </div>
                    </div>
                    <div>
                        @Html.PasswordFor(model => model.Senha, new { Style = "", placeholder = "Senha" })
                    </div>
                    <div style="width: 100%">
                        @Html.ValidationMessageFor(model => model.Senha)
                    </div>
                    <div>
                        <button class="btn btn-primary" type="submit">Acessar</button>
                        <button class="btn btn-primary" type="reset">Limpar</button>

                    </div>

                }
            </div>
            <div class="span4"></div>
        </div>
    </div>
    <script src="~/Content/js/bootstrap.js"></script>
</body>
</html>