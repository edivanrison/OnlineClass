@model EAD.Onlineclass.Dominio.Cursos

@{
    ViewBag.Title = "EditarCursos";
}

<h2>EditarCursos</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Cursos</legend>
        
       
        <div class="editor-field">
            @Html.HiddenFor(model => model.CursoId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NomeDoCurso)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NomeDoCurso)
            @Html.ValidationMessageFor(model => model.NomeDoCurso)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Descricao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Descricao)
            @Html.ValidationMessageFor(model => model.Descricao)
        </div>

        <p>
            <input type="submit" value="Salvar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@* ReSharper disable Razor.SectionNotResolved *@
@section Scripts {
@* ReSharper restore Razor.SectionNotResolved *@
    @Scripts.Render("~/bundles/jqueryval")
}
