            @Html.LabelFor(model => model.AlunoNome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AlunoNome)
            @Html.ValidationMessageFor(model => model.AlunoNome)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.AlunoEmail)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AlunoEmail)
            @Html.ValidationMessageFor(model => model.AlunoEmail)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.AlunoRG)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AlunoRG)
            @Html.ValidationMessageFor(model => model.AlunoRG)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.AlunoTelefone)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AlunoTelefone)
            @Html.ValidationMessageFor(model => model.AlunoTelefone)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Login)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Login)
            @Html.ValidationMessageFor(model => model.Login)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Senha)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Senha)
            @Html.ValidationMessageFor(model => model.Senha)
        </div>

        <p>
            <input type="submit" value="Finalizar" />
        </p>
    </fieldset>
